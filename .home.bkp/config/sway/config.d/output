### Output configuration
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
#
set $bg-folder ~/Pictures/Background
set $bg-left wallhaven-vqmml5_1920x1080.png
set $bg-main wallhaven-6doz6l_3840x1600.png

output HDMI-A-1 \
    resolution 1920x1080@74.973Hz \
    position 0,0 \
    bg $bg-folder/$bg-left fit

output DP-3 \
    resolution 3840x1600@59.994Hz \
    position 1920,0 \
    bg $bg-folder/$bg-main fit

# output DP-3 resolution 1920x1080@74.973Hz

